<tr class="flex-list-row-header table-row top-0">
    {{#each leftColumns}}
        <th class="absolute table-cell ltr:sticky-border-tl rtl:sticky-border-tr ltr:stick-left rtl:stick-right z-30" {{#if name}} data-fieldname="{{name}}"{{/if}}>
            {{field ../this model=../model template='list'}}
        </th>
    {{/each}}
    {{#each _fields}}
        <th class="relative table-cell {{widthClass}} px-2" {{#if name}} data-fieldname="{{name}}"{{/if}}>
        <span>
            {{str label labelModule}}
        </span>
        </th>
    {{/each}}
</tr>
